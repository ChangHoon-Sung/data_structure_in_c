{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "sort_main build",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
                "${fileDirname}/*.c",
                "-o",
                "${workspaceFolder}/bin/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        }
    ]
}